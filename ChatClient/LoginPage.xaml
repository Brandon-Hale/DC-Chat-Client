<Page x:Class="ChatClient.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Login Screen" VerticalAlignment="Top" FontSize="15"/>
        <TextBox Name="userName" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="Username" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="40" Width="200" FontSize="24"/>
        <Button Name="loginButton" Content="Login" HorizontalAlignment="Center" Margin="0,400,0,0" VerticalAlignment="Top" Height="40" Width="200" Click="loginButton_Click"/>
        <TextBlock Name="userNameStatus" HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top"/>

    </Grid>
</Page>
